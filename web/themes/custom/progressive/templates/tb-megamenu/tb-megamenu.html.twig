{% if menu_name == 'main' %}
<ul class="nav navbar-nav navbar-center">
  {{ content }}
</ul>
{% else %}
  <div class="header">
    <div class="secondary-megamenu primary {{ menu_name }}">
      <div class="navbar navbar-default" role="navigation">
        <button type="button" class="navbar-toggle btn-navbar collapsed" data-toggle="collapse" data-target=".{{ menu_name }} .navbar-collapse">
          <span class="text">{{ 'Menu'|t }}</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <nav class="collapse collapsing navbar-collapse">
          <ul class="nav navbar-nav navbar-center">
            {{ content }}
          </ul>
        </nav>
      </div>
    </div>
  </div>
{% endif %}
